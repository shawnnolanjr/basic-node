<form class="form-signin" method="post" id="loginForm">
    <h2 class="form-signin-heading"></h2>
    <div class="form-group">
        <label for="usernameLogin" class="sr-only">Username</label>
        <input type="text" id="usernameLogin" name="username" class="form-control" placeholder="Username" required autofocus />
    </div>
    <div class="form-group">
        <label for="passwordLogin" class="sr-only">Password</label>
        <input type="password" id="passwordLogin" name="password" class="form-control" placeholder="Password" required autofocus>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit" id="loginBtn">Sign in</button>
</form>